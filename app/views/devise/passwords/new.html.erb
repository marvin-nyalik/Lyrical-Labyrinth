<div class="container" style="display: flex; justify-content: center; flex-direction: column; margin: 10px auto; width: 85%;">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", style: "border-radius: 4px;" %>
    </div>

    <div class="actions">
      <%= f.submit "Send Reset Instructions", class:"btn btn-info my-2" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>