<%= form_with model: @comment, url: post_comment_path(post_slug: @comment.post.slug, id: @comment.id), method: :patch do |form| %>
    <h3>Comment on this post</h3>
    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body, required: true %>
    </div>
    
    <%= form.submit 'Edit' %>
<% end %>
  